{
  "name": "@dinpay/base",
  "description": "DinPay Core Blockchain Libary",
  "version": "0.1.12",
  "contributors": [
    "DinPay, Inc. <developers@dinpay.io>",
    "François-Xavier Thoorens <fx@ark.io>",
    "Kristjan Košič <kristjan@ark.io>",
    "Brian Faust <brian@ark.io>",
    "Alex Barnsley <alex@ark.io>"
  ],
  "license": "MIT",
  "bin": {
    "din:start": "./bin/dinpay start",
    "din:relay": "./bin/dinpay relay",
    "din:forger": "./bin/dinpay forger",
    "din:snapshot": "./bin/dinpay snapshot"
  },
  "scripts": {
    "debug:start": "node --inspect-brk ./bin/dinpay start",
    "debug:relay": "node --inspect-brk ./bin/dinpay relay",
    "debug:forger": "node --inspect-brk ./bin/dinpay forger",
    "debug:snapshot": "node --inspect-brk ./bin/dinpay snapshot",
    "start": "./bin/dinpay start",
    "start:live": "./bin/dinpay start --config ./lib/config/live --network live",
    "start:devnet": "./bin/dinpay start --config ./lib/config/devnet --network devnet",
    "start:testnet": "DIN_ECOSYSTEM=test ./bin/dinpay start --config ./lib/config/testnet --network testnet",
    "start:testnet:live": "./bin/dinpay start --config ./lib/config/testnet.live --network testnet",
    "relay": "./bin/dinpay relay",
    "relay:live": "./bin/dinpay relay --config ./lib/config/live --network live",
    "relay:devnet": "./bin/dinpay relay --config ./lib/config/devnet --network devnet",
    "relay:testnet": "DIN_ECOSYSTEM=test ./bin/dinpay relay --config ./lib/config/testnet --network testnet",
    "relay:testnet:live": "./bin/dinpay relay --config ./lib/config/testnet.live --network testnet",
    "forger": "./bin/dinpay forger",
    "forger:live": "./bin/dinpay forger --config ./lib/config/live --network live",
    "forger:devnet": "./bin/dinpay forger --config ./lib/config/devnet --network devnet",
    "forger:testnet": "DIN_ECOSYSTEM=test ./bin/dinpay forger --config ./lib/config/testnet --network testnet",
    "forger:testnet:live": "./bin/dinpay forger --config ./lib/config/testnet.live --network testnet",
    "snapshot": "./bin/dinpay snapshot",
    "snapshot:live": "./bin/dinpay snapshot --config ./lib/config/live --network live",
    "snapshot:devnet": "./bin/dinpay snapshot --config ./lib/config/devnet --network devnet",
    "snapshot:testnet": "./bin/dinpay snapshot --config ./lib/config/testnet --network testnet",
    "snapshot:testnet:live": "./bin/dinpay snapshot --config ./lib/config/testnet.live --network testnet",
    "full:testnet": "DIN_ECOSYSTEM=test ./bin/dinpay start --config ./lib/config/testnet --network testnet --network-start",
    "full:testnet:live": "./bin/dinpay start --config ./lib/config/testnet.live --network testnet --network-start",
    "full:testnet:2tier:2": "DIN_ECOSYSTEM=test ./bin/dinpay start --config ./lib/config/testnet.2 --network testnet --network-start",
    "full:testnet:2tier:1": "DIN_ECOSYSTEM=test ./bin/dinpay start --config ./lib/config/testnet.1 --network testnet --network-start",
    "full:testnet:2tier": "DIN_ECOSYSTEM=test ./bin/dinpay start --config ./lib/config/testnet.1 --network testnet --network-start && ./bin/dinpay start --config ./lib/config/testnet.2 --network testnet --network-start",
    "lint": "eslint ./ --fix",
    "depcheck": "depcheck ./"
  },
  "dependencies": {
    "commander": "^2.15.1",
    "@dinpay/base-logger": "*",
    "@dinpay/dindb": "*",
    "@dinpay/dindb-sequelize": "*",
    "@dinpay/dinpay-api": "*",
    "@dinpay/encryption": "*",
    "@dinpay/forging": "*",
    "@dinpay/gqldb": "*",
    "@dinpay/ledger": "*",
    "@dinpay/log-manager": "*",
    "@dinpay/peers": "*",
    "@dinpay/presets": "*",
    "@dinpay/rpc": "*",
    "@dinpay/txhub": "*",
    "@dinpay/txhub-redis": "*",
    "@dinpay/webhooks": "*"
  }
}
