    "test:watch:all": "DIN_ECOSYSTEM=test jest --runInBand --watchAll",
    "lint": "eslint ./ --fix",
    "depcheck": "depcheck ./ --ignores=winston-daily-rotate-file"
  },
  "dependencies": {
    "chalk": "^2.4.1",
